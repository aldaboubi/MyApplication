<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aldaboubi.myapplication.My_ProfileActivity"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <!-- Call toolbar_layout.xml in Here -->
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Welcome Khalid Aldaboubi"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textSize="25dp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:text="Donate"
                android:id="@+id/button4"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:background="#df1919"
                android:textColor="#ffffff"
                android:onClick="donate" />

            <Button
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:text="Receive"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="200dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#219a89"
                android:textColor="#ffffff"
                android:onClick="recieve"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Create Navigation View for View Drawer Navigation -->

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"
        android:layout_gravity="start"
        android:layout_marginTop="56dp"
        android:background="#fdfcfc"></android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
